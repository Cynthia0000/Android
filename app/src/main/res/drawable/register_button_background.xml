<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正常状态 - 使用白色背景和深色边框 -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="12dp" />
            <padding
                android:left="20dp"
                android:top="14dp"
                android:right="20dp"
                android:bottom="14dp" />
            <!-- 增加较粗的深色边框以提高对比度 -->
            <stroke
                android:width="2dp"
                android:color="@color/tiffanyGreen" />
        </shape>
    </item>

    <!-- 按下状态 - 使用tiffany蓝背景和深色边框 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#68D8E0" />
            <corners android:radius="12dp" />
            <padding
                android:left="20dp"
                android:top="14dp"
                android:right="20dp"
                android:bottom="14dp" />
            <stroke
                android:width="2dp"
                android:color="@color/tiffanyGreenDark" />
        </shape>
    </item>
</selector>