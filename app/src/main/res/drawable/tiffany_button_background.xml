<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正常状态 - 使用更亮的tiffany蓝，增加阴影效果 -->
    <item android:state_pressed="false">
        <shape>
            <solid android:color="#68D8E0" />
            <corners android:radius="12dp" />
            <padding
                android:left="20dp"
                android:top="14dp"
                android:right="20dp"
                android:bottom="14dp" />
            <!-- 增强阴影效果 -->
            <stroke
                android:width="2dp"
                android:color="@color/tiffanyGreen" />
        </shape>
    </item>

    <!-- 按下状态 - 使用较深的tiffany蓝 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/tiffanyGreen" />
            <corners android:radius="12dp" />
            <padding
                android:left="20dp"
                android:top="14dp"
                android:right="20dp"
                android:bottom="14dp" />
            <stroke
                android:width="2dp"
                android:color="@color/tiffanyGreenDark" />
        </shape>
    </item>
</selector>